@model ChangePassword
@{
    ViewData["Title"] = "ChangePassword";
     }

<div style="margin-top:25px">
    <form method="post">

        <div asp-validation-summary="All"></div>
        <div class="form-group col-md-5">
            <label asp-for="OldPassword">Old Password : </label>
            <input type="password" asp-for="OldPassword" class="form-control" />
            @if (ViewBag.WrongPassword)
            {
                <script>alert("Wrong password");</script>
            }
        </div>

        <div class="form-group col-md-5">
            <label asp-for="NewPassword">New Password :</label>
            <input type="password" asp-for="NewPassword" class="form-control" />
        </div>



        <div class="form-group col-md-5">
            <label asp-for="NewPassword2">New Password Again : </label>
            <input type="password" asp-for="NewPassword2" class="form-control" />
        </div>


        <div class="form-group col-md-5">
            <button type="submit" class="btn btn-dark">Submit</button>
        </div>
    </form>
</div>

